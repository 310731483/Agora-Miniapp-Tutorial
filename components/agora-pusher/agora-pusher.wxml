<!--components/agora-pusher.wxml-->
<view class="pusher-container" id="rtcpusher" style="top: {{y}}px; left: {{x}}px; width: {{width}}px; height: {{height}}px; position: absolute;">
  <live-pusher style="height:{{height}}px; position: absolute; width: 100%; " url="{{url}}" mode="RTC" aspect="{{aspect}}" class="camera" bindstatechange="recorderStateChange" muted="{{muted}}" beauty="{{beauty ? 0.5 : 0}}"
    max-bitrate="500" min-bitrate="200" waiting-image="https://webdemo.agora.io/away.png" autopush="true" debug="{{debug}}" />
  <cover-view wx-if="{{loading}}" class="sud flex-center-column" style="position: absolute; width: 100%; height: 100%;justify-content:center">
    <cover-image style="width: 128px;height:103px" src="../../images/loading.png"></cover-image>
  </cover-view>
</view>